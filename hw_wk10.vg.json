{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jsoh0011/FIT3179_Vis2/main/world_data_2023.csv"
  },

  "params": [
    {
      "name": "Unemployment_Rate_Filter",
      "value": 0,
      "bind": {
        "input": "range", 
        "min": 0, 
        "max": 25,
        "step": 5,
        "name": "Unemployment Rate %:  "
      }
    }
  ],
  
  "vconcat": [
    {
      "title": "Life Expectancy of Each Country (2023)", 
      "width": 800,
      "height": 400,
      "projection": {"type": "equalEarth"},
      "data": {
        "url": "https://raw.githubusercontent.com/jsoh0011/FIT3179/main/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },

      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/jsoh0011/FIT3179_Vis2/main/world_data_2023.csv"
            },
            "key": "Country",
            "fields": ["Life_Expectancy"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "gray"},
      "encoding": {
        "color": {
          "field": "Life_Expectancy",
          "title": "Life Expectancy",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [60, 72, 80],
            "range": ["#f2f2f2", "#aebddf", "#7390cd", "#4268bb", "#1746a9"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country: "},
          {
            "field": "Life_Expectancy",
            "type": "quantitative",
            "title": "Life Expectancy: "
          }
        ]
      }

    },

    {
      "title": "Unemployment Rate of Each Country (2023)",
      "width": 800,
      "height": {"step": 20},

      "layer": [
        {
        "mark": {"type": "bar", "color": "#4268bb"}
        }, 
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": 3
          },
          "encoding": {
            "text": {"field": "Unemployment_Rate", "type": "quantitative"}
          }
        }],

      "transform": [
        {
          "filter": {"not": {"field": "Unemployment_Rate", "equal": ""}}
        }, 
        {"filter": "datum.Unemployment_Rate > Unemployment_Rate_Filter"}

      ],

      "encoding": {
        "y": {
          "field": "Country", 
          "type": "nominal", 
          "sort": "-x",
          "title": "Country"
          },
        "x": {
          "field": "Unemployment_Rate", 
          "type": "quantitative", 
          "scale": {
            "domain": [0, 30]},
            "axis": null
            }, 
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country: "}, 
          {"field": "Unemployment_Rate", "type": "quantitative", "title": "Unemployment Rate %: "}
        ]
      }

    }

  ], 
  "config": {"title": {"fontSize": 18, "dy": -10}}
}